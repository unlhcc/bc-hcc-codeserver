#!/bin/bash
<%

# Set our working directory.
working_dir = Pathname.new(context.working_dir)

# Ensure that code-server always starts up in either a user defined directory or the home directory.
if ! working_dir.exist?
    working_dir = Pathname.new(ENV['HOME'])
elsif working_dir.file?
    working_dir = working_dir.parent
end
%>

# Apptainer tweaks
export COMMON=${HOME/#\/home/\/common}
export APPTAINERENV_PS1="[\u@\h \W]\$ "
export APPTAINER_BINDPATH="/home,/work,/common,/util,/srv,/var/run,/run"
# Image file
CODESERVER_IMAGE="/work/HCC/APPTAINER/IMAGES/codeserver-<%= context.codeserver_version %>.sif"

CODE_SERVER_DATAROOT="$HOME/.local/share/code-server"
mkdir -p "$CODE_SERVER_DATAROOT/extensions"

# Expose the password to the server.
export PASSWORD="$password"

# Print compute node.
echo "$(date): Running on compute node ${compute_node}:$port"

# Load apptainer modules
. /util/opt/lmod/lmod/init/profile
export -f module
module use /util/opt/hcc-modules/Common
module purge
module load apptainer

# Load any user-specific modules for new shell sessions in the container.
cat > 99-session-modules.sh << EOL
#!/bin/bash
module purge
module load <%= context.addl_modules %>
module list
EOL
chmod +x 99-session-modules.sh

#
# Start Code Server.
#
echo "$(date): Started code-server"
echo ""

# Load any user-specific modules for the code-server session as well.
# Yes, we really do have to load the modules both here and for new
# shells. The processes code-server spins off do *not* inherit its env.
cat > codesession.sh << EOL
#!/bin/bash
. /util/opt/lmod/lmod/init/profile
module use /util/opt/hcc-modules/Common
module purge
module load <%= context.addl_modules %>
module list
code-server \
    --auth="password" \
    --bind-addr="0.0.0.0:${port}" \
    --disable-telemetry \
    --extensions-dir="$CODE_SERVER_DATAROOT/extensions" \
    --user-data-dir="$CODE_SERVER_DATAROOT" \
    --verbose \
    --ignore-last-opened \
    --disable-getting-started-override \
    --disable-update-check \
    -w "Welcome to code-server on ${compute_node}" \
    -an "HCC Code-Server" \
    --config $PWD/config.yaml \
    "<%= working_dir.to_s %>"
EOL
chmod +x codesession.sh

apptainer exec -B $PWD/99-session-modules.sh:/etc/profile.d/99-session-modules.sh $CODESERVER_IMAGE ./codesession.sh
